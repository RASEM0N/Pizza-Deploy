{
  "name": "pizza",
  "version": "0.0.0",
  "license": "ISC",
  "scripts": {
    "dev:back": "npm run start:dev --prefix ./backend",
    "dev:back:db": "npm run prisma:studio --prefix ./backend",
    "dev:back:debug": "npm run start:debug --prefix ./backend",
    "dev:front:nuxt": "npm run dev --prefix ./frontend-nuxt",
    "dev:front:next": "npm run dev --prefix ./frontend-nextjs",
    "prettier": "npm run prettier:back && npm run prettier:front:nuxt && npm run prettier:front:next",
    "prettier:back": "prettier --write ./backend/src/**/*.ts",
    "prettier:front:nuxt": "prettier --write ./frontend-nuxt/**/*.{ts,vue}",
    "prettier:front:next": "prettier --write ./frontend-nextjs/src/**/*.{ts,tsx}"
  }
}
